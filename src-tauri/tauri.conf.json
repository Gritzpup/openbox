{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TurboLaunch",
  "version": "0.1.14",
  "identifier": "com.turbolaunch.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd /home/ubuntubox/github/openbox/src && npm run build",
    "frontendDist": "../src/build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TurboLaunch",
        "width": 1400,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' game-media: blob: data:; media-src 'self' game-media: stream:; connect-src ipc: http://ipc.localhost",
      "capabilities": ["turbolaunch"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/Gritzpup/openbox/main/updater/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDA0OTg4ODUzNzJFMzEzMzgKUldRNEUrTnlVNGlZQkRaMm1EN29KTzZRbDRHY0dSU2s3bExSRzZCSjVuR0VPWHJ4Y2FpbWVkSE4K",
      "windows": {
        "installMode": "quiet"
      }
    }
  }
}
