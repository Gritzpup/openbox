{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TurboLaunch",
  "version": "0.1.173",
  "identifier": "com.turbolaunch.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TurboLaunch",
        "width": 1400,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' game-media: blob: data:; media-src 'self' game-media: stream:; connect-src 'self' ipc: http://ipc.localhost http://192.168.1.51:3001"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "compression": "zlib",
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "http://192.168.1.51:3001/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQzNTUzNjM4MTNERjQ0QUEKUldTcVJOOFRPRFpWMDRHeGNTS1Q5c1IxU051NnZKRTAvU2ZzRFE2b0FabmIzM2hkTzlSV0xGL2kK"
    }
  }
}
